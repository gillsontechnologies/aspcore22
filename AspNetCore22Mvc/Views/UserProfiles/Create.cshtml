@using AspNetCore22Mvc.Models.AccountViewmodels
@model RegisterViewModel

@{
    ViewData["Title"] = "Add Profile";
}

    <div class="row">
        <div class="col-md-4">
            <form id=""asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h4>User Management<span> Add User Profile</span></h4>
                <hr />
              
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" autocomplete="on" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" autocomplete="on" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Surname"></label>
                    <input asp-for="Surname" class="form-control" autocomplete="on" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Organisation"></label>
                    <input asp-for="Organisation" class="form-control" autocomplete="on" />
                    <span asp-validation-for="Organisation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Position"></label>
                    <input asp-for="Position" class="form-control" autocomplete="on" />
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" autocomplete="on" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" autocomplete="on" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" autocomplete="on" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>
                        Assign Role
                    </label>

                    <select id="RoleId" name="RoleId" asp-items="ViewBag.Roles" class="form-control col-md-7 col-xs-12">
                        <option value="">--Select--</option>
                    </select>

                </div>
                <div class="form-group" id="DivApproved">
                    <label>
                        isApprove
                    </label>

                    <input id="isApproved" name="isApproved" type="checkbox" value="true" />

                </div>

                <div class="form-group">
                  
                        <a asp-action="Index" class="btn btn-primary">Back to List</a>
                        <button class="btn btn-warning" type="reset">Reset</button>
                        <button type="submit" class="btn btn-success">Submit</button>
                </div>
            </form>
        </div>
</div>
                @section Scripts {
                    @await Html.PartialAsync("_ValidationScriptsPartial")
                }


